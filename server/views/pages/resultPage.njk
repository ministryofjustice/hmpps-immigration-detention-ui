{% extends "../partials/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Enter Immigration Detention Record Type" %}
{% set mainClasses = "app-container govuk-body" %}

{% block beforeContent %}
  {{ super() }}
  <nav>
    {{ govukBackLink({
      attributes: { 'data-qa': 'back-link' },
      text: "Back",
      href: model.backLink()
    }) }}
  </nav>
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
      <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title" data-qa=success-message>{{ model.getSuccessMessage() }}</h1>
      </div>
      <br>
      <div class="govuk-heading-l">What you need to do next</div>
        <p class="govuk-body govuk" data-qa=follow-info>{{ model.getFollowInfo () }}</p>
        <ol class="govuk-body"><a href="#">Add or update an alert</a></ol>
        <ol class="govuk-body"><a href="#">Amend Release schedule</a></ol>
        <br>
         {{ govukButton({
            attributes: { 'data-qa': 'cancel-button' },
            text: "Continue to overview",
            classes: "govuk-button--secondary",
            href: model.cancelLink()
          }) }}
  </div>
</div>

{% endblock %}
