{% extends "../partials/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Result page" %}
{% set mainClasses = "app-container govuk-body" %}

{% block beforeContent %}
  {{ super() }}
  <nav>
    {{ govukBackLink({
      attributes: { 'data-qa': 'back-link' },
      text: "Back",
      href: model.backLink()
    }) }}
  </nav>
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
      <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title" data-qa=success-message>{{ model.getSuccessMessage() }}</h1>
      </div>
      <br>
      {% if model.getFollowInfo() %}
        <div class="govuk-heading-l">What you need to do next</div>
        <p class="govuk-body govuk" data-qa=follow-info>{{ model.getFollowInfo() }}</p>
        <ol class="govuk-body">1. <a data-qa="prisoner-alert-url" href="{{ model.getAlertsUrl() }}">Add or update an alert on the person's profile</a></ol>
        <ol class="govuk-body" data-qa="nomis-release-text">2. Go to NOMIS to update the release schedule</ol>
        <br>
      {% endif %}
         {{ govukButton({
            attributes: { 'data-qa': 'cancel-button' },
            text: "Continue to overview",
            classes: "govuk-button--secondary",
            href: model.cancelLink()
          }) }}
  </div>
</div>

{% endblock %}
